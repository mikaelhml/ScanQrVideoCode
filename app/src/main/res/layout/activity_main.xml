<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <Button
        android:id="@+id/btnScanQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Ler QR" />

    <Button
        android:id="@+id/btnCriarQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnScanQRCode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:text="Gerar QR de Arquivo" />


    <Chronometer
        android:id="@+id/simpleChronometer"
        android:layout_width="249dp"
        android:layout_height="98dp"
        android:layout_below="@+id/img_Recuperada"
        android:layout_alignStart="@+id/img_Recuperada"
        android:layout_alignEnd="@+id/img_Recuperada"
        android:layout_marginStart="79dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="84dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/img_Recuperada"
        android:layout_width="450dp"
        android:layout_height="450dp" />

    <TextView
        android:id="@+id/textQRLidos"
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_above="@+id/btnCriarQRCode"
        android:layout_below="@+id/simpleChronometer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="361dp"
        android:layout_marginBottom="5dp"
        android:textSize="24sp" />
</RelativeLayout>