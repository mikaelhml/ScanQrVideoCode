<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <Button
        android:id="@+id/btnScanQRCode"
        android:layout_width="106dp"
        android:layout_height="67dp"
        android:layout_below="@+id/simpleChronometer"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="12dp"
        android:text="Ler QR" />

    <Button
        android:id="@+id/btnCriarQRCode"
        android:layout_width="97dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/simpleChronometer"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="12dp"
        android:text="Gerar QR de Arquivo" />

    <Chronometer
        android:id="@+id/simpleChronometer"
        android:layout_width="111dp"
        android:layout_height="23dp"
        android:layout_below="@+id/img_Recuperada"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="114dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="95dp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/img_Recuperada"
        android:layout_width="450dp"
        android:layout_height="450dp" />

    <TextView
        android:id="@+id/textQRLidos"
        android:layout_width="136dp"
        android:layout_height="56dp"
        android:layout_above="@+id/btnCriarQRCode"
        android:layout_below="@+id/simpleChronometer"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="140dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="-97dp"
        android:textSize="24sp" />
</RelativeLayout>